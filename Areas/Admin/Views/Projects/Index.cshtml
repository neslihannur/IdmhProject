@model IEnumerable<IdmhProject.Models.Project>
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Projects List";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="container mt-5">
    <a href="/Admin/Projects/Create" class="btn btn-primary mb-3">Create New Project</a>



<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Category</th>
            <th>Team Member</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Title</td>
                <td>@project.Description</td>
                <td>@project.Category.Name</td>
                <td>@project.TeamMember</td>
                <td>@project.CreatedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@project.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@project.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
<!-- Optional: Include Bootstrap from CDN -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
