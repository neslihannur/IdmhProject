@model IEnumerable<IdmhProject.Models.Project>
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Projects List";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="container mt-5">
    <a href="/Admin/Projects/Create" class="btn btn-primary mb-3">Create New Project</a>


    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Category</th>
                <th>Team Members</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.Description</td>
                    <td>
                        <img src="@project.Image" alt="@project.Title" class="img-fluid" style="max-width: 100px; height: auto;" />
                    </td>
                    <td>@project.Categories.Name</td>
                    <td>
                        <ul class="list-unstyled">
                            @foreach (var teamMember in project.ProjectTeamMembers.Select(ptm => ptm.TeamMember))
                            {
                                <li>@teamMember.Name - <small>@teamMember.Position</small></li>
                            }
                        </ul>
                    </td>
                    <td>@project.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-info">Details</a>
                        <form asp-action="Delete" asp-route-id="@project.Id" method="post" class="d-inline-block">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Optional: Include Bootstrap from CDN -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
